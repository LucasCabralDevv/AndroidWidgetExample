<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidWidgetExample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.CustomStyle.WaterButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Colored
        </item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableStart">@drawable/baseline_water_drop_24</item>
    </style>
</resources>